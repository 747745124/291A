<%= form_with url: posts_path, method: :get, local: true do %>
    <%= label_tag :username, "Filter by username" %>
    <%= text_field_tag :username, params[:username] %>
    <%= submit_tag "Search" %>
  <% end %>
  
  <% @posts.each do |post| %>
    <div>
      <h3><%= post.user.username %></h3>
      <p><%= post.content %></p>
      <p>Comments: <%= link_to post.comment_count, post_path(post) %></p>
      <p>Last updated: <%= post.updated_at.strftime("%B %d, %Y %H:%M") %></p>
    </div>
  <% end %>
